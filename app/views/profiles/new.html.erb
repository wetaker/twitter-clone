


<%= form_with model: @profile do |form| %>
    <% if current_user.profile.avatar.attached?%>
        <img src="<%=(url_for(current_user.avatar))%>">
    <%else%>
        <img src="/assets/defaultprofile">
    <%end%>
    <%= form.file_field :avatar%>
    <%= form.text_field :description %>
    <%= form.submit "Create" %>
<% end %>
